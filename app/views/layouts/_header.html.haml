.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %span{:class => (:active if current_page?(root_path))}
        = link_to 'Ruby on Rails #{w_środy}', root_path, id: "logo"
      .nav-collapse
        %ul.nav.pull-right
          %li{:class => (:active  if current_page?(about_path))}
            = link_to 'O nas', about_path
          %li{:class => (:active if nav_helper('projects'))}
            = link_to 'Projekty', projects_path
          %li{:class => (:active if nav_helper('links'))}
            = link_to 'Linki', links_path
          %li.dropdown{:class => ["visible-desktop", (:active if nav_helper('guides') || current_page?(tree_path))]}
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#menu1"}
              Materiały
              %b.caret
            %ul.dropdown-menu
              %li= link_to 'Drzewo katalogów', tree_path
              %li.divider
              %li= link_to 'Przewodniki', guides_path
          %li{:class => ["hidden-desktop", (:active if current_page?(tree_path))]}
            = link_to 'Drzewo katalogów', tree_path
          %li{:class => ["hidden-desktop", (:active if nav_helper('guides'))]}
            = link_to 'Przewodniki', guides_path
          - if current_user.present?
            %li{:class => (:active if nav_helper('posts'))}
              = link_to 'Wall', wall_path
          %li.divider-vertical
          = render 'layouts/navbar'
