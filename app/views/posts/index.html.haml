- provide(:title, 'Wall')

%h1 Wall of shame/blame/flame

- if current_user.present?
  = render :partial => 'posts/form'

.posts{'data-bind' => 'foreach: posts.slice(0).reverse(), visible: posts().length > 0'}
  .post-box
    .post-header
      .post-avatar
        %img{'data-bind' => 'attr: { src: avatar }'}
      .post-username{'data-bind' => 'text: username'}
      .post-dateinfo{'data-bind' => 'text: distance, attr: { title: date }'}
    %p.comment{'data-bind' => 'html: comment'}
    .post-actions
      .btn-group{'data-bind' => 'html: actions'}
.static
  -@posts.each do |post|
    = render post
