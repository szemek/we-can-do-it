.post-box
  %div.post-header
    = image_tag post.user.avatar_url, :class => "post-avatar"
    %span.username= post.user.username
    %br
    %span.date-info-small{:title => time_in_poland(post.date)}= localize(time_in_poland(post.date))
  %p= post.name
  %p= raw auto_link(post.content.gsub("\n","<br/>"))
