%h1 Wall of shame/blame/flame

.posts
  - @posts.each do |post|
    .post-box
      = image_tag post.user.avatar_url, :class => "avatar"
      %span= post.user.username
      %p= post.name
      %p= post.content
      %span.date-info{:title => time_in_poland(post.date)}= distance_of_time_in_words(Time.now, post.date)
%br

= link_to 'New Post', new_post_path
