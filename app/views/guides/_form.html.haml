= form_for @guide do |f|
  -if @guide.errors.any?
    #error_explanation
      %h2 Operacja nie powiodła się:
      %ul
        - @guide.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
    .field
    = f.label :seo_url
    = f.text_field :seo_url
  .field
    = f.label :content
    = f.text_area :content
  .actions
    = f.submit 'Zapisz', :class => 'btn btn-success'
