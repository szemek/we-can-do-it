- if current_user.present?
  %li.avatar
    = image_tag current_user.avatar_url
  %li.dropdown
    %a.dropdown-toggle.home{ :href => '#', 'data-toggle' => "dropdown"}
      = current_user.username
      %b.caret
    %ul.dropdown-menu
      %li= link_to 'Logout', logout_path
- else
  %li= link_to 'Login', login_path
