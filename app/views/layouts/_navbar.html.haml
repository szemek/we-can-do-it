- if current_user.present?
  %li.avatar.visible-desktop
    = image_tag current_user.avatar_url
  %li.dropdown{:class => ['active', 'visible-desktop']}
    %a.dropdown-toggle.home{ :href => '#', 'data-toggle' => "dropdown"}
      = current_user.username
      %b.caret
    %ul.dropdown-menu
      %li= link_to 'Logout', logout_path, method: :delete
  %li.hidden-desktop
    %a.btn-danger{:href => logout_path}
      %i.icon-user.icon-white
      = 'Wyloguj ' + current_user.username
- else
  %li{ :class => if nav_helper('sessions') then 'active' end }= link_to 'Login', login_path
